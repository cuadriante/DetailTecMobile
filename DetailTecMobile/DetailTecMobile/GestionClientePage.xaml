<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DetailTecMobile.GestionClientePage">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="Center"
                VerticalOptions = "CenterAndExpand"
                Text = "Mi Perfil"
                FontSize ="48"/>
            <Label Text="{Binding nombre}"
                   FontSize="Medium"
                   TextColor="Black"
                   FontAttributes="Bold"/>
            <Label Text="{Binding apellido1}"
                   FontSize="Medium"
                   TextColor="Black"
                   FontAttributes="Bold"/>
            <Label Text="{Binding apellido2}"
                   FontSize="Medium"
                   TextColor="Black"
                   FontAttributes="Bold"/>
            <Label Text="{Binding email}"
                   FontSize="Medium"
                   TextColor="Black"
                   FontAttributes="Bold"/>
            <Button 
                HorizontalOptions="Center"
                VerticalOptions = "CenterAndExpand"
                Text = "Atras"
                Clicked="BackButton_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>